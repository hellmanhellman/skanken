<%= simple_form_for(@member) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name , label: t('form.name') %>
  <%= f.input :mobile, label: t('form.mobile') %>
  <%= f.input :email, required: false, label: t('form.email') %>
  <%= f.input :date_of_birth, label: "Date of birth", required: false, label: t('form.date_of_birth') %>
  <%= f.input :activities, required: true, as: :check_boxes, collection: @activities, label: t('form.activities'), hint: activities_hint(@member) %>
  <%= f.button :submit, form_button %>
<% end %>