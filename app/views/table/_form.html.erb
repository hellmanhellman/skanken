<%= simple_form_for(@search_form, url: url, method: :get) do |f| %>
  <%= f.input :query, label: false, placeholder: t('table.search.description'), onfocus: "initSearch(this, '#{{ search_presenter: { query: '' } }.to_param}')" %>
  <%= f.input :activity_id, label: false ,prompt: t('table.filter_by_activity'), collection: @cooperative.activities %>
  <%= f.button :submit, t('table.search.button'), class: 'btn btn-primary pull-right' %>
<% end %>
