<div id="userMemberFormModel" class="modal fade bs-job-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= t('user_member.form_header') %></h4>
      </div>
      <div class="modal-body">
        <div id="modal_form_user_member">
          <!-- activity_id needs to be set when randomizer show for be able to randomize next member -->
          <% activity_id = @activity.try(:id) || '' %>
          <!-- @member has a value from randomizer, in members table it is set by a jquery function -->
          <% member_id = @member.try(:id) || '' %>
          <%= simple_form_for(@user_member, url: user_members_path(@user_member, activity_id: activity_id))  do |f| %>
            <%= f.input :comment, label: t('form.comment'), as: :text %>
            <%= f.input :member_id, as: :hidden, input_html: { value: member_id, id: "member_id" } %>
            <%= f.button :submit, t('user_member.submit')  %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
